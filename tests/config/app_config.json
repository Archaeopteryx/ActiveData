{
	"use": "elasticsearch",
	"testing":{
		"query": "http://127.0.0.1:5000/query",
		"sql": "http://127.0.0.1:5000/sql",
		"tuid": "http://127.0.0.1:5000/tuid"
	},
	"flask": {
		"host": "0.0.0.0",
		"port": 5000,
		"debug": false,
		"threaded": true,
		"processes": 1,
		"ssl_context": "adhoc",
		"allow_exit": true
	},
	"constants": {
		"pyLibrary.env.http.default_headers": {
			"Referer": "https://wiki.mozilla.org/Auto-tools/Projects/ActiveData"
		},
		"pyLibrary.env.big_data.MAX_STRING_SIZE": 100000000,
		"jx_elasticsearch.meta.ENABLE_META_SCAN": true,
		"jx_elasticsearch.meta.DEBUG": false,
		"jx_base.expressions.ALLOW_SCRIPTING": true
	},
	"request_logs": {
		"host": "http://localhost",
		"port": 9200,
		"index": "activedata_requests",
		"type": "request_log",
		"tjson": false,
		"schema": {
			"$ref": "//.../resources/schema/request_log.schema.json"
		}
	},
	"saved_queries": {
		"host": "http://localhost",
		"port": 9200,
		"index": "saved_queries",
		"type": "query",
		"debug": false
	},
	"elasticsearch": {
		"host": "http://localhost",
		"port": 9200,
		"index": "testdata",
		"type": "test_result",
		"debug": true
	},
	"tuid": {
		"database": {
			"name": "tuid.db",
			"load_functions": false
		},
		"hg": {
			"branch": "mozilla-central"
		},
		"_hg_cache": {
			"use_cache": true,
			"hg": {
				"url": "https://hg.mozilla.org"
			},
			"branches": {
				"host": "http://localhost",
				"port": 9200,
				"index": "branches",
				"type": "branch",
				"tjson": true,
				"timeout": 300,
				"consistency": "one", // WE ONLY NEED ONE SHARD TO BE AVAILABLE
				"debug": false,
				"limit_replicas": false
			},
			"repo": {
				"host": "http://localhost",
				"port": 9200,
				"index": "repo",
				"type": "revision",
				"tjson": true,
				"timeout": 300,
				"consistency": "one", // WE ONLY NEED ONE SHARD TO BE AVAILABLE
				"debug": false,
				"limit_replicas": false
			}
		}
	},
	"debug": {
		"trace": true,
		"cprofile": {
			"enabled": true,
			"filename": "./results/profile.tab"
		},
		"log": [
			{
				"log_type": "console"
			},
			{
				"log_type": "email",
				"from_address": "klahnakoski@mozilla.com",
				"to_address": "klahnakoski@mozilla.com",
				"subject": "[ALERT][DEV]Problem with ActiveData Server",
				"$ref": "file://~/private.json#email"
			},
			{
				"log_type": "elasticsearch",
				"host": "http://localhost",
				"port": 9200,
				"index": "debug_active_data",
				"type": "active_data"
			}
		]
	}
}
